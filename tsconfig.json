{
  "compilerOptions": {
    "target": "ES2022",

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "exclude": [
    "node_modules",
    "build"
  ]
}
